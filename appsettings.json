{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u}] [{IPAddress}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Month",
          "retainedFileCountLimit": 36,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u}] [{IPAddress}] {Message}{NewLine}{Exception}",
          "shared": true
        }
      }

    ],
    "Enrich": [ "FromLogContext" ]
